<div class="row">
  <form class="col-md-6 col-md-offset-3" id="search">
    <div class="form-group">
      <label for="term">Artist</label>
      <input class="form-control text-center" name="term" placeholder="type here..." type="text">
    </div>
    <button class="btn btn-default btn-block" type="submit">Search</button>
  </form>
</div>

<div class="row" id="results"></div>

<script type="text/javascript">
  $(document).ready(function () {
    window.spotify.searchController.init();
  });
</script>

<script id="artist-card" type="text/x-handlebars-template">
  <div class="jumbotron col-md-6 col-md-offset-3">
    <div class="container" data-artistid="{{id}}">
      <h2 class="text-center">{{name}}</h2>
      <p class="text-center">{{followersCount}}
        followers</p>
      <p class="text-center">{{popularity}}
        popularity points</p>
      <img class="img-responsive" src="{{imageUrl}}"/>
      <button class="center-block btn btn-primary" data-action="albums" type="button">See Albums</button>
      <div id="albumscontainer" style="display: none;"></div>
    </div>
  </div>
</script>

<script id="album-media" type="text/x-handlebars-template">
  <div class="media">
    <div class="media-left">
      <a href="#">
        <img class="media-object" height="50" src="{{imageUrl}}" width="50">
      </a>
    </div>
    <div class="media-body">
      <h4 class="media-heading">{{title}}</h4>
      <button class="btn btn-primary btn-xs" data-action="listen" data-albumid="{{id}}" data-target="#modal{{id}}" data-toggle="modal">Listen</button>
    </div>
  </div>
</script>

<script id="album-modal-template" type="text/x-handlebars-template">
  <div aria-labelledby="myModalLabel" class="modal fade" id="album-modal" role="dialog" tabindex="-1">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button aria-label="Close" class="close" data-dismiss="modal" type="button">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title" id="myModalLabel">{{title}}</h4>
        </div>
        <div class="modal-body">
          {{#each songs}}
            <li>
                <audio class="song" src="{{previewUrl}}" controls="true">
                  Your browser does not support the <code>audio</code> element.
                  <source src="{{previewUrl}}">
                </audio>
            &#9658;</button>â€‹
            {{title}}
            </li>
          {{/each}}
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

</script>
